extends layout

block content
  script(type='text/x-handlebars',data-template-name='books')
    div(class="ui stacked segment") 
        div(class="ui form segment")
            div(class="ui three fields")
                div(class="field")
                    label ISBN
                    div(class="ui input")
                        {{input type="text" placeholder="ISBN" value=newISBN}}
                div(class="field")
                    label Title
                    div(class="ui input")
                        {{input type="text" placeholder="Titile" value=newTitle}}
                div(class="field")
                    label Description
                    div(class="ui input")
                        {{input type="text" value=newDesc}}
                div(class='circular ui button',{{action add}}) Add Book
                    i(class='add icon')

    div(class="ui stacked segment")
        table(class="ui celled table segment")
            thead
                tr
                    th ISBN
                    th Title
                    th Description
                    th 
            tbody
                {{#each itemController='book'}}
                tr
                    td
                        {{isbn}}
                    td 
                        {{title}}
                    {{#if isEditing}}
                    td
                        div(class="ui input")
                            {{edit-desc value=description focus-out='update' insert-newline='update'}}
                    {{else}}
                    td 
                        label({{action editDesc}}) {{description}} 
                    {{/if}}
                    td 
                        div(class="ui circular icon button",{{action remove}})
                            i(class='red remove icon')
                {{/each}}

            


